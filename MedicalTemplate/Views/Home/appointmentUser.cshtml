<!-- Appointment Start -->
<div class="container-fluid bg-primary bg-appointment mb-5 wow fadeInUp" data-wow-delay="0.1s" style="margin-top: 90px;">
    <div class="container p-4 ">
        <form method="post" action="/Home/SaveUser">
            <div class="row gx-5 my-1">
                <div class="col-lg-6">
                    <div class="appointment-form h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-white mb-4">Melumatlarini daxil et</h1>
                        <div class="row g-3">

                            <div class="col-12 col-sm-12">
                                <input type="text" name="UserFirstName" class="form-control bg-light border-0" placeholder="Your Name" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-12">
                                <input type="text" name="UserLastName" class="form-control bg-light border-0" placeholder="Your LastName" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-12">
                                <input type="text" name="UserPhoneNumber" class="form-control bg-light border-0" placeholder="Your Phone Number" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-12">
                                <input type="text" name="UserEmail" class="form-control bg-light border-0" placeholder="Your Email" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-12">
                                <textarea name="UserMessage" class="form-control bg-light border-0" placeholder="Your Message" style="min-height: 55px;max-height:100px"></textarea>
                            </div>
                           
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="appointment-form h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-white mb-4">Hekim ve Sikayet secimi</h1>
                        <div class="row g-3">
                            <div class="col-12 col-sm-12">
                                <select name="UserChoosenDrId">
                                    @foreach (var item in ViewBag.Doctors)
                                    {
                                        <option value="@item.DrId">@item.DrName</option>
                                    }
                                </select>
                            </div>
                            <div class="col-12 col-sm-12">
                                <select name="UserOperationTypeId">
                                    @foreach (var item in ViewBag.Op)
                                    {
                                        <option value="@item.OpId">@item.OpName</option>
                                    }
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-12 m-3">
                    <button class="btn btn-dark w-100 py-3" type="submit">Make Appointment</button>
                </div>
            </div>
            </form>
    </div>

</div>
<!-- Appointment End -->
