@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}


<!-- Blank Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row bg-light rounded justify-content-center mx-0">
        <div class="container-fluid my-1 border-1">
            <h1>Calendar</h1>



            <div class="container mt-4">
                <h4>Doktor Çalışma Saatleri</h4>
                <form method="post" action="@Url.Action("SaveSchedule")">
                    <div class="form-group">
                        <label for="DrDayId">Çalışma Günü:</label>
                        <select name="DrDayId" class="form-control">
                            @foreach (var item in ViewBag.Days)
                            {
                                <option value="@item.DaysId">@item.DaysName</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="DrStartTime">Çalışma Başlangıç Zamanı:</label>
                        <input type="datetime-local" name="DrStartTime" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="DrEndTime">Çalışma Bitiş Zamanı:</label>
                        <input type="datetime-local" name="DrEndTime" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="BreakStart">Ara Başlangıç Zamanı:</label>
                        <input type="datetime-local" name="BreakStart" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="BreakEnd">Ara Bitiş Zamanı:</label>
                        <input type="datetime-local" name="BreakEnd" class="form-control" />
                    </div>
                    <input type="hidden" name="DrId" class="form-control" value=" @User.FindFirst(System.Security.Claims.ClaimTypes.Sid).Value" />

                    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
                </form>
            </div>


        </div>
    </div>
</div>
